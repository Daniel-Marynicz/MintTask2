{
  "type": "project",
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "symfony/flex": "^1.6",
    "symfony/console": "^5.0",
    "jms/serializer": "^3.6",
    "symfony/framework-bundle": "^5.0",
    "symfony/dotenv": "^5.0",
    "symfony/yaml": "^5.0",
    "doctrine/collections": "^1.6",
    "jms/serializer-bundle": "^3.5",
    "symfony/orm-pack": "^1.0",
    "symfony/security-bundle": "^5.0",
    "behatch/contexts": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.19",
    "phpunit/phpunit": "^9.1",
    "squizlabs/php_codesniffer": "^3.5",
    "phpstan/phpstan-phpunit": "^0.12.8",
    "doctrine/coding-standard": "^7.0",
    "phpstan/phpstan-symfony": "^0.12.6",
    "phpstan/phpstan-doctrine": "^0.12.10",
    "symfony/maker-bundle": "^1.15",
    "behat/behat": "^3.6",
    "behat/mink": "^1.8",
    "behat/mink-browserkit-driver": "^1.3",
    "friends-of-behat/symfony-extension": "^2.1",
    "behat/symfony2-extension": "^2.1",
    "symfony/profiler-pack": "^1.0"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "phpcs": [
      "./vendor/bin/phpcs"
    ],
    "phpcbf": [
      "./vendor/bin/phpcbf"
    ],
    "phpcbfWithoutErrorCode": [
      "./vendor/bin/phpcbf || true"
    ],
    "phpstan": [
      "./vendor/bin/phpstan analyse"
    ],
    "phpunit": [
      "./vendor/bin/phpunit --fail-on-warning "
    ],
    "behat": [
      "./vendor/bin/behat --strict --stop-on-failure"
    ],
    "deptrac": [
      "./vendor/bin/deptrac"
    ],
    "phplint": [
      "find . -path ./vendor -prune  -o -path ./var -prune -o  -name \"*.php\" -print0 | xargs -0 -n1 php -l"
    ],
    "tests": [
      "@phpcbfWithoutErrorCode",
      "@phpcs",
      "@phpunit",
      "@phpstan"
    ]
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "behat/symfony2-extension",
        "version": "2.1.5",
        "dist": {
          "url": "https://github.com/Behat/Symfony2Extension/archive/2.1.5.zip",
          "type": "zip"
        },
        "autoload": {
          "psr-0": { "Behat\\Symfony2Extension": "src/" }
        },
        "require": {
          "php":                       ">=5.3.3",
          "behat/behat":               "^3.4.3",
          "symfony/framework-bundle":  "~2.0|~3.0|~4.0|~5.0"
        }
      }
    }
  ]
}
